<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@color/custom_row"
            android:layout_height="wrap_content">
    <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignRight="@+id/data_grid"
                android:layout_marginRight="32dp"
                android:layout_marginTop="62dp"
                android:id="@+id/img"
                android:background="@drawable/black" />

            <GridLayout
                android:id="@+id/data_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="@dimen/right_margin_train"
                    android:layout_row="0"
                    android:id="@+id/destination"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Abuja to Kaduna"
                    android:textSize="24dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="@dimen/right_margin_train"
                    android:layout_row="2"
                    android:id="@+id/route1"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:text="Departure time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:id="@+id/dt1"
                    android:textColor="@color/black"
                    android:text="7:00am" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:id="@+id/d1"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/black"
                    android:text="IDU" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="@dimen/right_margin_train"
                    android:layout_row="3"
                    android:id="@+id/route2"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:text="Arrival time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:textColor="@color/black"
                    android:id="@+id/at1"
                    android:text="7:00am" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:id="@+id/d2"
                    android:layout_row="3"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/black"
                    android:text="KUBWA" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="@dimen/right_margin_train"
                    android:layout_row="4"
                    android:id="@+id/route3"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:text="Departure time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:id="@+id/dt2"
                    android:textColor="@color/black"
                    android:text="7:00am" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="4"
                    android:id="@+id/d3"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/black"
                    android:text="KUBWA" />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="@dimen/right_margin_train"
                    android:layout_row="5"
                    android:id="@+id/route4"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:text="Arrival time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:id="@+id/at2"
                    android:textColor="@color/black"
                    android:text="7:00am" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="5"
                    android:id="@+id/d4"
                    android:textColor="@color/black"
                    android:layout_marginLeft="24dp"
                    android:text="RIGASA" />


            </GridLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

