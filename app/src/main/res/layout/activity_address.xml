<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nightowltechnology.asimyaz.abuja2kaduna.AddressActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Station"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:text="Address"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="GPS Location"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark" />
            </TableRow>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/colorPrimaryDark"

                android:orientation="vertical">

            </LinearLayout>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Idu Station"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/address_idu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:text=""
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/dest1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Navigate"
                    android:textColor="#FFF" />
            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Kubwa Station"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/address_kubwa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:text=""
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/dest2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Navigate"
                    android:textColor="#FFF" />
            </TableRow>


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Jere Station"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/address_jere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:text=""
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/dest3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Navigate"
                    android:textColor="#FFF" />
            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Rijana Station"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/address_rijana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:text=""
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/dest4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Navigate"
                    android:textColor="#FFF" />
            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Rigasa Station"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/rigasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:text=""
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/dest5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Navigate"
                    android:textColor="#FFF" />
            </TableRow>


            v

        </TableLayout>
    </ScrollView>
</LinearLayout>
